<div class="profilecontainer">
  <img src="{{image}}" alt="{{name}}">
  <h2 class="profilelist">{{name}}</h2>
  <div class="profilelist">Breed: {{breed}}</div>
  <div class="profilelist">Owner: {{owner}}</div>
  <div class="profilelist">Profile: {{profile}}</div>
  <div class="profilelist">Comment: {{comments}}</div>
  <div>
    <form method="post" action="/puppies/comment/{{id}}">
      <div class="input-field>">
        <label>Comment:</label>
        <textarea type="text" name="comment" rows="10" cols="30" placeholder="Looking for love"></textarea>
      </div>
      <button class="profilebtn" type="submit">Send</button>
    </form>
  </div>
</div>
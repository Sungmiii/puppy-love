<div class="profilecontainer">
  <img src="{{image}}" alt="{{name}}">
  <h2>{{name}}</h2>
  <div>Breed: {{breed}}</div>
  <div>Owner: {{owner}}</div>
  <div>Profile: {{profile}}</div>
  <div>Comment: {{comments}}</div>
  <div>
    <form method="post" action="/puppies/comment/{{id}}">
      <div class="input-field>">
        <label>Comment:</label>
        <textarea type="text" name="comment" rows="10" cols="30" placeholder="Looking for love"></textarea>
      </div>
      <button type="submit">Send</button>
    </form>
  </div>
</div>